+        index = 8 + button - BTN_SIDE;
+        break;
+    }
+
+    valuator_mask_zero(&mask);
+    QueuePointerEvents(get_pointer_device(xwl_seat),
+                       state ? ButtonPress : ButtonRelease, index, 0, &mask);
